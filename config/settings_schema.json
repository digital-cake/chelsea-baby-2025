    {
      "name": "Delivery threshold",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_delivery_threshold",
          "label": "Show Delivery Threshold",
          "default": true
        },
        {
          "type": "textarea",
          "id": "allowed_countries",
          "label": "Countries to include",
          "info": "A comma seperated list of countries spelt as in the localisation menu that have access to the free delivery threshold",
          "default": "united kingdom,united states,australia,france"
        },
        {
          "type": "textarea",
          "id": "free_delivery_at",
          "label": "Free delivery at",
