        },
        {
          "type": "text",
          "id": "threshold_text",
          "label": "Pre-threshold text",
          "info": "Text to appear whilst cart total is below delivery threshold. Use [value] to posistion the remaining spend value",
          "default": "Spend [value] more for free delivery"
