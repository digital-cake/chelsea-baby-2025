    {
        "name": "SEO",
        "settings": [
          {
            "type": "image_picker",
            "id": "favicon",
            "label": "Favicon",
            "info": "Min. size: 128x128"
          },
          {
            "type": "image_picker",
            "id": "share_image",
            "label": "Share Image",
            "info": "This image will appear as the thumbnail when a non-product\/non-article page is shared on social media (size: 1200x1200)."
          },
          {
            "type": "text",
            "id": "shop_name",
            "label": "Shop Name",
            "info": "This will appear next to the shop name on the homepage browser tab."
          },
          {
            "type": "text",
            "id": "short_description",
            "label": "Shop Short Description",
            "info": "This will appear next to the shop name on the homepage browser tab."
          },
          {
            "type": "textarea",
            "id": "long_description",
            "label": "Shop Long Description",
