    "name": "Blog Showcase",
    "tag": "section",
    "class": "section-blog-showcase",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Section Title Here"
        },
        {
            "type": "select",
            "id": "tag",
            "label": "Tag",
