            "default": "Label"
        },
        {
            "type": "select",
            "id": "feature_link_style",
            "label": "Link Style",
            "options": [
                {
                    "label": "Solid",
                    "value": "solid"
                },
                {
                    "label": "text",
                    "value": "Text"
                }
            ],
            "default": "solid"
        },
        {
            "type": "select",
            "id": "feature_link_color",
            "label": "Link Colour",
            "options": [
                {
                    "label": "Primary",
                    "value": "primary"
