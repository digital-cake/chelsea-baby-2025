{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

{% if section.blocks.size > 0 %}
    {%- render 'vite' with '@sectionStyles/_brands-logo-slider.scss' -%}

    <div class="section-brands-logo-slider__container" style="background-color: {{ section.settings.background_color }};">
        <div class="wrap wrap--no-padding wrap--{{ section_id }}">
            <div class="section-brands-logo-slider__inner">
                {% if section.settings.title != blank %}
                    <{{ section.settings.tag }} style="color: {{ section.settings.title_color }}" class="small section-brands-logo-slider__inner-header">{{ section.settings.title }}</{{ section.settings.tag }}>
                {% endif %}
                <div class="section-brands-logo-slider__marquee">
                    <div class="section-brands-logo-slider__track">
                        {% for block in section.blocks %}
                            {% if block.settings.logo != blank %}
                                <div class="section-brands-logo-slider__item">
                                {% if block.settings.logo_link != blank %}<a aria-label="{{ block.settings.logo.alt }}" href="{{ block.settings.logo_link }}">{% endif %}
                                    {% render 'responsive-image', width: 400, source: block.settings.logo.src, alt: block.settings.logo.alt %}
                                {% if block.settings.logo_link != blank %}</a>{% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}

                        {%- comment -%}Duplicated the logos for seamless infinite scroll{%- endcomment -%}
                        {% for block in section.blocks %}
                            {% if block.settings.logo != blank %}
                                <div class="section-brands-logo-slider__item">
                                {% if block.settings.logo_link != blank %}<a aria-label="{{ block.settings.logo.alt }}" href="{{ block.settings.logo_link }}">{% endif %}
                                    {% render 'responsive-image', width: 400, source: block.settings.logo.src, alt: block.settings.logo.alt %}
                                {% if block.settings.logo_link != blank %}</a>{% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "Brands Logo Slider",
    "tag": "section",
    "class": "section-brands-logo-slider",
    "blocks": [
        {
            "name": "Logo",
            "type": "logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                },
                {
                    "type": "url",
                    "id": "logo_link",
                    "label": "Logo Link"
                }
            ]
        }
    ],
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title goes here"
        },
        {
            "type": "select",
            "id": "tag",
            "label": "Tag",
