{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

{% if section.blocks.size > 0 %}
    {%- render 'vite' with '@sectionStyles/_brands-logo-slider.scss' -%}
    {%- render 'vite' with '@@/components/brands-logo-slider.js' -%}

    {% if section.settings.autoplay == true %}
        <style>
            .wrap--{{ section_id }} .swiper-wrapper {
                transition-timing-function: linear !important;
            }
        </style>
    {% endif %}

    <div class="section-brands-logo-slider__container" style="background-color: {{ section.settings.background_color }};">
        <div class="wrap wrap--no-padding wrap--{{ section_id }}">
            <div class="section-brands-logo-slider__inner">
                {% if section.settings.title != blank %}
                    <{{ section.settings.tag }} class="small section-brands-logo-slider__inner-header">{{ section.settings.title }}</{{ section.settings.tag }}>
                {% endif %}
                <div class="section-brands-logo-slider__slider">
                    <div class="swiper swiper-{{ section_id }}">
                        <div class="swiper-wrapper">
                            {% for block in section.blocks %}
                                {% if block.settings.logo != blank %}
                                    <div class="swiper-slide">
                                        {% if block.settings.logo_link != blank %}<a aria-label="{{ block.settings.logo.alt }}" target="_blank" href="{{ block.settings.logo_link }}">{% endif %}
                                            {{ block.settings.logo.src | image_url: width: 400 | image_tag: alt: block.settings.logo.alt, width: 200 }}
                                        {% if block.settings.logo_link != blank %}</a>{% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const swiperBrandsLogoSlider = {
            section_id: {{ section_id | json }},
            autoplay: {{ section.settings.autoplay | json }},
            delay: {{ section.settings.delay | json }},
            speed: {{ section.settings.speed | json }}
        };

        window.addEventListener('DOMContentLoaded', function() {
            window.init_brands_logo_slider(swiperBrandsLogoSlider);
        });
        if (Shopify.designMode) {
            document.addEventListener('shopify:section:load', function() {
                window.init_brands_logo_slider(swiperBrandsLogoSlider);
            });
        };
    </script>
{% endif %}

{% schema %}
{
    "name": "Brands Logo Slider",
    "tag": "section",
    "class": "section-brands-logo-slider",
    "blocks": [
        {
            "name": "Logo",
            "type": "logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
