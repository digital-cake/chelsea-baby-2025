{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

{% if section.blocks.size > 0 %}
    {%- render 'vite' with '@sectionStyles/_two-column-text-media.scss' -%}
    {%- render 'vite' with '@@/components/two-column-text-media.js' -%}

    <div class="section-two-column-text-media__container" style="background-color: {{ section.settings.overall_background_color }};">
        <div class="wrap wrap--medium-large wrap--{{ section_id }}">
            <div class="section-two-column-text-media__inner">
                <div class="section-two-column-text-media__content" style="background-color: {{ section.settings.background_color }};">
                    {% if section.settings.label != blank %}
                        <span class="section-two-column-text-media__content-label" style="color: {{ section.settings.text_color }}">{{ section.settings.label }}</span>
                    {% endif %}
                    {% if section.settings.title != blank %}
                        <{{ section.settings.tag }} class="section-two-column-text-media__content-title" style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</{{ section.settings.tag }}>
                    {% endif %}
                    {% if section.settings.text != blank %}
                        <div class="section-two-column-text-media__content-text" style="color: {{ section.settings.text_color }}">{{ section.settings.text }}</div>
                    {% endif %}
                    <div class="section-two-column-text-media__content-actions">
                        {% if section.settings.link_one != blank and section.settings.link_one_label != blank %}
                             {% if section.settings.link_one_style == 'solid' %}
                                <a class="button button--{{ section.settings.link_one_color }}" href="{{ section.settings.link_one }}"><span>{{ section.settings.link_one_label }}</span></a>
                            {% else %}
                                <a class="button-text button-text--{{ section.settings.link_one_color }}" href="{{ section.settings.link_one }}"><span>{{ section.settings.link_one_label }}</span></a>
                            {% endif %}
                        {% endif %}
                        {% if section.settings.link_two != blank and section.settings.link_two_label != blank %}
                             {% if section.settings.link_two_style == 'solid' %}
                                <a class="button button--{{ section.settings.link_two_color }}" href="{{ section.settings.link_two }}"><span>{{ section.settings.link_two_label }}</span></a>
                            {% else %}
                                <a class="button-text button-text--{{ section.settings.link_two_color }}" href="{{ section.settings.link_two }}"><span>{{ section.settings.link_two_label }}</span></a>
                            {% endif %}
                        {% endif %}
                    </div>
                    {% unless section.settings.hide_illustration %}
                        <span class="illustration">{% render 'illustration-cb-logo.svg' %}</span>
                    {% endunless %}
                </div>
                <div class="section-two-column-text-media__swiper">
                    <div class="swiper swiper-{{ section_id }}">
                        <div class="swiper-wrapper">
                            {% for block in section.blocks %}
                                {% case block.type %}
                                    {% when 'video' %}
                                        {% if block.settings.video == blank %}{% continue %}{% endif %}
                                        <div class="swiper-slide">
                                            <div class="video-wrapper">
                                                <video
                                                    muted
                                                    loop
                                                    playsinline
                                                    autoplay
                                                    poster="{{ block.settings.video.preview_image.src | img_url: 'master' }}"
                                                    width="{{ block.settings.video.sources[1].width }}"
                                                    height="{{ block.settings.video.sources[1].height }}"
                                                    data-video
                                                >
                                                    <source src="{{ block.settings.video.sources[1].url }}" type="video/mp4">
                                                </video>
                                            </div>
                                        </div>
                                    {% else %}
                                        {% if block.settings.image == blank %}{% continue %}{% endif %}
                                        <div class="swiper-slide">
                                            <div class="image-wrapper">
                                                {% render 'responsive-image', width: 1272, source: block.settings.image.src, alt: block.settings.image.alt %}
                                            </div>
                                        </div>
                                {% endcase %}
                            {% endfor %}
                        </div>
                        {% if section.settings.enable_navigation and section.blocks.size > 1 %}
                            <div class="swiper-navigation">
                                <div class="swiper-button-prev swiper-button-prev-{{ section_id }}"></div>
                                <div class="swiper-button-next swiper-button-next-{{ section_id }}"></div>
                            </div>
                        {% endif %}
                        {% if section.settings.enable_pagination and section.blocks.size > 1 %}
                            <div class="swiper-pagination swiper-pagination--white swiper-pagination-{{ section_id }}"></div>
                        {% endif %}
                        <div class="image-overlay" style="background:{{ section.settings.image_overlay }}"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const twoColumnTextMediaSwiperData = {
            section_id: {{ section_id | json }},
            size: {{ section.blocks.size | json }},
            autoplay: {{ section.settings.autoplay | json }},
            delay: {{ section.settings.delay | json }},
            speed: {{ section.settings.speed | json }},
            enable_pagination: {{ section.settings.enable_pagination | json }},
            enable_navigation: {{ section.settings.enable_navigation | json }},
        };

        window.addEventListener('DOMContentLoaded', function() {
            window.init_two_column_text_media_slider(twoColumnTextMediaSwiperData);
        });
        if (Shopify.designMode) {
            document.addEventListener('shopify:section:load', function() {
                window.init_two_column_text_media_slider(twoColumnTextMediaSwiperData);
            });
        };
    </script>

{% endif %}

