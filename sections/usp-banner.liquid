{
    "name": "USP Banner",
    "tag": "section",
    "class": "section-usp-banner",
    "blocks": [
        {
            "name": "USP",
            "type": "usp",
            "limit": 3,
            "settings": [
                {
                    "type": "text",
                    "label": "Text",
                    "id": "text",
                    "default": "Usp Text"
                },
                {
                    "type": "url",
                    "label": "Link",
                    "id": "link"
