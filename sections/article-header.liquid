{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

{%- render 'vite' with '@sectionStyles/_article-header.scss' -%}

<div class="wrap wrap--article wrap--{{ section_id }}">
    <div class="section-article-header__inner">
        <div class="section-article-header__content">
            <span>{{ article.published_at | date: "%Y-%m-%d" }}</span>
            <h1 class="medium">{{ article.title }}</h1>
            {% if article.excerpt != blank %}
                <div>{{ article.excerpt }}</div>   
            {% endif %} 
        </div>
        <div class="section-article-header__image">
            {% if article.image != blank %}
                {{ article.image.src | image_url: width: 3840 | image_tag: class: "section-article-header__image", alt: article.image.alt }}
            {% endif %}
            <div class="section-article-header__overlay" style="background:{{ section.settings.image_overlay }}"></div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Article Header",
    "tag": "section",
    "class": "section-article-header",
    "settings": [
        {
            "type": "color_background",
            "id": "image_overlay",
            "label": "Image Overlay"
        },
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 136
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 72
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 116
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 52
        }
    ],
    "presets": [
        {
            "name": "Article Header"
        }
    ],
    "templates": ["article"]
}
{% endschema %}