{% assign section_id = section.id | replace: "_", "" | replace: "-", "" %}
{% render "section-styles", section_id: section_id, section: section %}

{% assign features_group = product.metafields.cake.product_features.value %}
{% if features_group != blank %}

    {%- render 'vite' with '@sectionStyles/_product-features.scss' -%}
    {%- render 'vite' with '@@/components/product-features.js' -%}

    <div class="section-product-features__container" style="background-color: {{ section.settings.background_color }};">
        <div class="wrap wrap--xxx-large wrap--{{ section_id }}">
            <div class="section-product-features__inner">
                {% if section.settings.title != blank %}
                    <h4 class="section-product-features__title">{{ section.settings.title }}</h4>
                {% endif %}
            </div>
            <div class="section-product-features__slides">
                <div class="swiper swiper-{{ section_id }}">
                    <div class="swiper-wrapper">
                        {% assign features_count = 0 %}
                        {% for feature_entry in features_group.entries.value %}
                            <div class="swiper-slide">
                                {% if feature_entry.image != blank %}
                                    <img src="{{ feature_entry.image.value.src | img_url: '395x450', crop: "center" }}" alt="{{ feature_entry.image.alt }}">
                                {% elsif feature_entry.video != blank %}
                                    <div class="video-wrapper">
                                        <video loop muted controls playsinline poster="{{ feature_entry.video.value.preview_image | image_url: width: 500 }}">
                                            <source src="{{ feature_entry.video.value | video_tag }}">
                                        </video>
                                    </div>
                                {% endif %}
                                <span class="title">{{ feature_entry.title.value }}</span>
                                <div class="text">{{ feature_entry.text | metafield_tag }}</div>
                            </div>
                            {% assign features_count = features_count | plus: 1 %}
                        {% endfor %} 
                    </div>
                </div>
                <div class="swiper-navigation">
                    <div class="swiper-button-prev swiper-button-prev-{{ section_id }}"></div>
                    <div class="swiper-button-next swiper-button-next-{{ section_id }}"></div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        const swiperProductFeaturesData = {
            section_id: {{ section_id | json }},
            size: {{ features_group.entries.value.size | json }},
            enable_navigation: {{ section.settings.enable_navigation | json }},
        };

        window.addEventListener('DOMContentLoaded', function() {
            window.init_product_features_slider(swiperProductFeaturesData);
        });
        if (Shopify.designMode) {
            document.addEventListener('shopify:section:load', function() {
                window.init_product_features_slider(swiperProductFeaturesData);
            });
        };
    </script>

{% endif %}

{% schema %}
{
    "name": "Product Features",
    "class": "section-product-features",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Features",
            "label": "Title"
        },
        {
            "type": "select",
            "id": "background_color",
            "label": "Background Color",
            "options": [
                {
                    "label": "White",
                    "value": "var(--color-white)"
                },
                {
                    "label": "Grey",
                    "value": "var(--color-grey)"
                },
                {
                    "label": "Primary",
                    "value": "var(--color-primary)"
                },
                {
                    "label": "Secondary",
                    "value": "var(--color-secondary)"
                },
                {
                    "label": "Tertiary",
                    "value": "var(--color-tertiary)"
                },
                {
                    "label": "Heritage",
                    "value": "var(--color-heritage)"
                }
            ],
            "default": "var(--color-grey)"
        },
        {
            "type": "checkbox",
            "id": "enable_navigation",
            "label": "Enable Navigation",
            "default": true
        },
        {
            "type": "header",
            "content": "Desktop padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 128,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 128,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 96
        },
        {
            "type": "header",
            "content": "Mobile padding"
        },
        {
            "type": "range",
            "id": "mobile_padding_top",
            "min": 0,
            "max": 128,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "mobile_padding_bottom",
            "min": 0,
            "max": 128,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 48
        }
    ],
    "presets": [
      {
        "name": "Product Features"
      }
    ],
    "templates": ["product"]
}
{% endschema %}
